<% provide(:title, '学生列表') %>
<h1>学生列表</h1>

<div>
  <%= link_to ">>添加学生", new_student_path,
                                class: "btn btn-large btn-primary btn-link" %>
</div>

<div class="users">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>学号</th>
        <th>姓名</th>
        <th>性别</th>
        <th>证件号码</th>
        <th>年级</th>
        <th>学院</th>
        <th>专业</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= link_to student.student_no, student %></td>
          <td><%= student.name %></td>
          <td><%= student.gender %></td>
          <td><%= student.id_number %></td>
          <td><%= student.grade %></td>
          <td><%= student.academy_encode %></td>
          <td><%= student.professional_encode %></td>
          <td><%= link_to '修改', edit_student_path(student) %></td>
          <td><%= link_to '删除', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate %>
