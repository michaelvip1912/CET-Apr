<% provide(:title, '学生信息') %>
<h1>学生信息</h1>

<div class="row">
  <div class="span6 offset3">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>学号:</strong>
      <%= @student.student_no %>
    </p>

    <p>
      <strong>姓名:</strong>
      <%= @student.name %>
    </p>

    <p>
      <strong>性别:</strong>
      <%= @student.gender %>
    </p>

    <p>
      <strong>身份证号:</strong>
      <%= @student.id_number %>
    </p>

    <p>
      <strong>学院:</strong>
      <%= @student.academy_encode %>
    </p>

    <p>
      <strong>专业:</strong>
      <%= @student.professional_encode %>
    </p>

    <p>
      <strong>年级:</strong>
      <%= @student.grade %>
    </p>
  </div>
</div>

<div class="offset2">
  <%= link_to '修改', edit_student_path(@student) %> |
  <%= link_to '返回', students_path %>
</div>


