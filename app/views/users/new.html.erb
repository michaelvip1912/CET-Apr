<% provide(:title, '新建管理员') %>
<h1>新建管理员</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :encode, "帐号" %>
      <%= f.text_field :encode %>

      <%= f.label :name, "名称" %>
      <%= f.text_field :name %>

      <%= f.label :permission, "管理员级别" %>
      <%= f.select :permission , options_for_select([["校管理员","school_admin"], ["院管理员", "academy_admin"]]) %>

      <%= f.label :academy_encode, "所属院系" %>
      <%= f.select :academy_encode, options_for_select(Academy.all.collect{|p| [p.academy_name]}), {:include_blank=>true} %>

      <%= f.label :password, "密码" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "密码确认" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "新建", class: "btn  btn-primary" %>
    <% end %>
  </div>
</div>