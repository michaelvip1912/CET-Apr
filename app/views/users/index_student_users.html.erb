<% provide(:title, '学生用户') %>
<h1>学生用户</h1>

<div class="users">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>学号</th>
        <th>姓名</th>
        <th>学院</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.encode, user %></td>
          <td><%= user.name %></td>
          <td><%= user.academy_encode %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
 </div>