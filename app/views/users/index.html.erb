<% provide(:title, '管理员') %>
<h1>管理员</h1>

<div>
  <%= link_to ">>添加管理员", new_user_path,
                                class: "btn btn-large btn-primary btn-link" %>
</div>

<div class="users">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>帐号</th>
        <th>管理员名称</th>
        <th>管理员级别</th>
        <th>所属院系</th>
        <th>操作</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.encode, user %></td>
          <td><%= user.name %></td>
          <td><%= get_name_by_permission(user.permission) %></td>
          <td><%= user.academy_encode %></td>
          <td><%= link_to '删除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
 </div>