<% provide(:title, '专业列表') %>
<h1>专业列表</h1>

<div>
  <%= link_to ">>添加专业", new_professional_path,
                                class: "btn btn-large btn-primary btn-link" %>
</div>

<div class="users">
  <table class="table table-striped table-bordered table-hover table-condensed">
     <tr>
        <th>专业代码</th>
        <th>专业名称</th>
        <th colspan="2">操作</th>
     </tr>
   <% @professionals.each do |professional| %>
     <tr>
        <th><%= link_to professional.professional_encode, professional %></th>
        <th><%= link_to professional.professional_name, professional %></th>
        <th><%= link_to "修改", edit_professional_path(professional)%></th>
        <th><%= link_to "删除", professional, method: :delete,
                                  data: { confirm: "确定删除?" } %></th>
     </tr>
   <% end %>
  </table>
</div>

<%= will_paginate %>